cmake_minimum_required(VERSION 3.8)
project(cpp_sensors)
set(CMAKE_CXX_STANDARD 17)
find_package(GTest REQUIRED)
include_directories(include ${GTEST_INCLUDE_DIRS})
add_library(sensors STATIC src/sensors.cpp)
add_executable(sensor_tests tests/sensors_test.cpp)
target_link_libraries(sensor_tests sensors ${GTEST_LIBRARIES} pthread)
